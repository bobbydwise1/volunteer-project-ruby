<div class="container">
  <div class="row">
    <div class="col container">
      <h1>Projects</h1>

      <div class="container">
        <h5>The name of the current project is:</h5>
        <p><b>id: </b><%=@current_project.id%></p>
        <p><b>title: </b><%=@current_project.title%></p>

      </div>

      <hr></hr>

      <div>

        <form action="/projects/<%=@current_project.id%>/edit" method="post">
          <input name="_method" type="hidden" value="patch">
          <label for="title">Update the current project title:</label>
          <input id="title" class="form-control" type="text" name="title" pattern="[A-Za-z0-9\s]{1,128}" required title="No special characters.">
          <div class="button">
            <button type="submit">Update Project</button>
          </div>
        </form>
      </div>

      <hr></hr>

      <div>
        <form action="/projects/<%=@current_project.id%>/edit" method="post">
          <input name="_method" type="hidden" value="delete">

          <button type="submit">Delete Project</button>
        </form>
      </div>

      <hr></hr>

      <a href="/">Index</a>

    </div>
  </div>
</div>
