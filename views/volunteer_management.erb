<div class="container">
  <div class="row">
    <h1>Volunteer Management</h1>
  </div>
  <div class="row">

    <div class="col">
      <div class="row">
        <h3>Add Author</h3>
      </div>
      <div class="row">
        <form class="" action="/volunteer_management" method="post">
          <div class="form-group">
            <input type="text" name="name" placeholder="Author">
          </div>

          <button type="submit">Add Author</button>
        </form>
      </div>

      <hr>

      <div class="row">
        <button type="button" name="button">Edit Author</button>
      </div>
    </div>

    <div class="col">
      <ul>
        <% @volunteers.each do |volunteer| %>
          <li><%= volunteer.id %><%= volunteer.name %></li>
          <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <a href="/"> <button type="button">Go Back</button> </a>
  </div>
</div>
