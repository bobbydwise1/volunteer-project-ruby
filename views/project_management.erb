<div class="container">
  <div class="row">
    <div class="col container">
      <h1>Projects</h1>

      <div class="container">
        <h5>The name of the current project is:</h5>
        <p><b>id: </b><%=@current_project.id%></p>
        <p><b>title: </b><%=@current_project.title%></p>

      </div>
      <div>
        <form action="/project_management/<%= @current_project.id %>" method="post">
          <input name="_method" type="hidden" value="patch">
          <label for="title">Update the current project title:</label>
          <input id="title" class="form-control" type="text" name="title">
          <a href="#" onclick="this.parentNotde.submit()">Edit Project</a>
        </form>
      </div>

      <hr></hr>

      <form action="/project_management" method="post">
        <input name="_method" type="hidden" value="delete">
        <div class="button">
          <button type="submit" name="button">Delete Project</button>
        </div>
      </form>

      <hr></hr>

      <a href="/">Return to Main Index Page</a>

    </div>
  </div>
</div>
