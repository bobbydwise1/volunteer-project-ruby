<div class="container">
  <div class="row">
    <h1>Project Management</h1>
  </div>
  <div class="row">

    <div class="col">
      <div class="row">
        <h3>Add Book</h3>
      </div>
      <div class="row">
        <form class="" action="/project_management" method="post">
          <div class="form-group">
            <input type="text" name="title" placeholder="Book Title">
          </div>

          <div class="form-group">
            <input type="text" name="author" placeholder="Author">
          </div>

          <button type="submit">Add project</button>
        </form>
      </div>

      <hr>

      <div class="row">
        <button type="button" name="button">Edit Book</button>
      </div>
    </div>

    <div class="col">
      <ul>
        <% if @projects != nil %>
            <% @projects.each do |project| %>
            <form id="form_<%= project.id %>" action="/project_management/<%= project.id %>" method="get">
                <li>
                  <button id="button_project<%= project.id %>" type="submit" name="select" value="<%= project.id %>">Edit: </button><%= project.title %>
                </li>
              </form>
            <% end %>
        <% end %>
    </ul>
    </div>
  </div>

  <div class="row">
    <a href="/"> <button type="button">Go Back</button> </a>
  </div>
</div>
